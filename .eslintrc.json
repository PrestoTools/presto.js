{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },

  "extends": [
    "plugin:prettier/recommended"
  ],

  "rules": {
    "quotes": 0,
    "radix": 2,
    "indent": [2, 2],
    "camelcase": 2,
    "no-underscore-dangle": 0,
    "new-cap": 2,
    "strict": [2, "global"],
    "keyword-spacing": 2,
    "space-before-function-paren": [2, "never"],
    "no-irregular-whitespace": 2,
    "no-shadow": 2,
    "linebreak-style": ["error", "unix"],
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "singleQuote": true,
      "tabWidth": 2,
      "trailingComma": "none"
    }]
  }
}
